<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_tecnico"
    android:padding="16dp">

    <Button
        android:id="@+id/btnSalirTecnico"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:text="Salir"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:paddingTop="55dp">


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="230dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero tecnico"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/txtNumTecnico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre(s)"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/txtNomTecnico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewAp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido paterno"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/txtApePat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewAm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido materno"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/txtApeMat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewUser"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:background="@drawable/user"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnEstatusTec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:layout_weight="1"
        android:background="@drawable/lista_ver"
        android:onClick="Estatus"
        android:padding="10dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEstatus"
        android:layout_marginStart="50dp"
        android:text="Ver actividades" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:text="Actividades"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="Ver actividades" />


</RelativeLayout>