<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_tecnico"
    android:padding="16dp">
    <Button
        android:id="@+id/btnSalirCliente"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:text="Salir"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:paddingTop="55dp">


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="230dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero cliente"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/textViewNumCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>

            <TextView
                android:id="@+id/textViewN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre(s)"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/textViewNombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miguel Armando"/>

            <TextView
                android:id="@+id/textViewAp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido paterno"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/textViewApePat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balderrama"/>

            <TextView
                android:id="@+id/textViewAm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido materno"
                android:textColor="#000000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/textViewApeMat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marrufo"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewUser"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:background="@drawable/user"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnEstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnSolicitar"
        android:layout_marginStart="43dp"
        android:layout_weight="1"
        android:background="@drawable/lista_ver"
        android:onClick="Estatus"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnSolicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="37dp"
        android:layout_weight="1"
        android:background="@drawable/lista_add"
        android:onClick="Solicitar"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEstatus"
        android:layout_marginStart="50dp"
        android:text="Ver actividades" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnSolicitar"
        android:layout_below="@+id/btnEstatus"
        android:text="Agregar actividad" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:text="Actividades"
        android:textColor="#000000"
        android:textSize="18dp" />


</RelativeLayout>